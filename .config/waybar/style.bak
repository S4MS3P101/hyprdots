@import "../../.cache/wal/colors-waybar.css";

* {
    border: none;
    font-family: "SF Pro", "JetBrainsMono Nerd Font Propo";
    font-weight: 600;
    font-size: 13px;
    min-height: 0;
}

window#waybar {
    background: none;
    color: @color14;
    border-radius: 5px;
}

window#waybar.empty #window {
    background: none;
    border: none;
}

tooltip {
    background: alpha(@background, 0.25);
    color: @foreground;
    padding: 5px;
    border-radius: 5px;
    margin-top: 5px;
}

#workspaces button {
    background: alpha(@background, 0.75);
    color: @foreground;
    min-width: 1.20rem; 
    border-radius: 999px;
    margin-right: 5px;
}

#workspaces button.active {
    background: alpha(@background, 1);
    color: @color14;
    margin-right: 5px;
    padding: 5px;
    min-width: 4rem; 
    border-radius: 999px;
}

#workspaces button.empty {
    background: alpha(@background, 0.75);
    color: @color8;
    margin-right: 5px;
    padding: 5px;
    border-radius: 999px;
}

#workspaces button.visible {
    background: alpha(@color4, 1);
    color: @background;
    margin-right: 5px;
    padding: 5px;
    border-radius: 999px;
}

#workspaces button:hover {
    background: alpha(@color6, 1);
    color: @color0;
    padding: 5px;
    border-radius: 999px;
}
#window {
    background: alpha(@background, 0.75);
    color: @foreground;
    padding: 5px 8px;
    border-radius: 999px;
}

#custom-magic,
#idle_inhibitor,
#network,
#bluetooth,
#pulseaudio,
#backlight,
#battery,
#clock,
#custom-notification,
#tray {
    color: @foreground;
    padding: 5px 8px;
}

#custom-magic,
#idle_inhibitor,
#systray, 
#custom-notification,
#clock,
#tray {
    background: alpha(@background, 0.75);
    border-radius: 999px;
    min-width: 0.80rem; 
}

#network:hover,
#bluetooth:hover,
#pulseaudio:hover,
#backlight:hover,
#battery:hover,
#clock:hover,
#custom-notification:hover {
    background: alpha(@color6, 1);
    color: @color0;
    border-radius: 999px;
}

#battery.charging {
    color: #33ff00;
}

#battery.warning:not(.charging) {
    color: orange;
}

#battery.critical:not(.charging) {
    color: red;
}

#custom-magic {
    color: @color8;
}
