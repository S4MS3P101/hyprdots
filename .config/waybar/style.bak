@import "../../.cache/wal/colors-waybar.css";

* {
    border: none;
    font-family: "Segoe UI Variable", "JetBrainsMono Nerd Font Propo";
    font-weight: 600;
    font-size: 13px;
    min-height: 0;
}

window#waybar {
    background: none;
    color: @foreground;
    border-radius: 5px;
}

window#waybar.empty #window {
    background: none;
    border: none;
}

tooltip {
    background: alpha(@background, 0.75);
    color: @foreground;
    padding: 5px;
    border-radius: 5px;
    margin-top: 5px;
}

#workspaces {
    background: alpha(@background, 0.75);
    border-radius: 999px;
    padding: 3px;
}

#workspaces button {
    color: @foreground;
    border-radius: 999px;
    min-width: 1.25rem; 
}

#workspaces button.active {
    background: alpha(@background, 1);
    color: @color6;
    min-width: 4rem; 
    border-radius: 999px;
}

#workspaces button.empty {
    color: @color8;
    border-radius: 999px;
    min-width: 1.25rem; 
}

#workspaces button.visible {
    background: alpha(@color4, 1);
    color: @background;
    min-width: 4rem; 
}

#workspaces button:hover {
    color: @color7;
    border-radius: 999px;
}

#window {
    background: alpha(@background, 0.75);
    color: @foreground;
    padding: 5px 8px;
    border-radius: 999px;
}

#custom-nightlight,
#custom-launcher,
#idle_inhibitor,
#network,
#bluetooth,
#pulseaudio,
#backlight,
#battery,
#clock,
#custom-notification,
#tray {
    color: @foreground;
    padding: 0.3rem 0.65rem;
}

#custom-nightlight,
#custom-launcher,
#idle_inhibitor,
#systray, 
#custom-notification,
#clock,
#tray {
    background: alpha(@background, 0.75);
    border-radius: 999px;
}

#network:hover,
#bluetooth:hover,
#pulseaudio:hover,
#backlight:hover,
#battery:hover,
#clock:hover,
#custom-notification:hover {
    color: @color4;
    border-radius: 999px;
}

#battery.charging {
    color: #33ff00;
}

#battery.warning:not(.charging) {
    color: orange;
}

#battery.critical:not(.charging) {
    color: red;
}

#custom-launcher {
    color: #1793D1;
}

#custom-launcher:hover {
    background: alpha(@color4, 0.15);
}
